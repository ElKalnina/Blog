<h1>Listing Tasks</h1>
<%= link_to 'New task', new_task_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th  colspan="3" ></th>
  </tr>

  <% @tasks.each do |tasks| %>
    <tr>
      <td><%= tasks.title %></td>
      <td><%= tasks.text %></td>
      <td><%= link_to 'Show', task_path(tasks) %></td>
      <td><%= link_to 'Edit', edit_task_path(tasks) %></td>
      <td><%= link_to 'Destroy', task_path(tasks),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
